<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="5dp"
        android:layout_marginLeft="7.5dp"
        android:layout_marginRight="7.5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:cardElevation="3dp"
        android:background="@android:color/white"
>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cl_job_item"
>

    <ImageView
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:id="@+id/iv_job_item"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.5"
            android:id="@+id/ll_job_informations"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            app:layout_constraintLeft_toRightOf="@id/iv_job_item"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal"
    >

        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:id="@+id/tv_job_company"
                android:drawableLeft="@drawable/ic_build"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:drawableTint="@android:color/holo_green_dark"
                android:drawablePadding="5dp"
                android:fontFamily="sans-serif-medium"
                tools:text="adadsdas"
                android:gravity="center_vertical"
        />

        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:id="@+id/tv_job_location"
                android:drawableLeft="@drawable/ic_location"
                android:drawableTint="@android:color/holo_red_dark"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:drawablePadding="5dp"
                android:fontFamily="sans-serif-medium"
                tools:text="adadsdas"
                android:gravity="center_vertical"
        />

        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:id="@+id/tv_job_type"
                android:drawableLeft="@drawable/ic_work"
                android:drawableTint="@android:color/holo_blue_dark"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:drawablePadding="5dp"
                tools:text="adadsdas"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical"
        />

    </LinearLayout>

    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@id/iv_job_item"
            android:id="@+id/tv_job_title"
            app:layout_constraintTop_toBottomOf="@+id/ll_job_informations"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-medium"
    />



</androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
